{
  "compilerOptions": {
    "target": "es6",

    /* Modules */
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
